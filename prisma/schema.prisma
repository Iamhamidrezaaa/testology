// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./testology.db"
}

enum Role {
  USER
  ADMIN
  MODERATOR
  THERAPIST
  CONTENT_PRODUCER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  lastName      String?   // نام خانوادگی
  email         String?   @unique
  password      String?
  image         String?
  avatar        String?   // آواتار کاربر
  phone         String?   @unique
  birthDate     String?   // تاریخ تولد
  province      String?   // استان
  city          String?   // شهرستان
  bio           String?   // بیوگرافی کاربر
  twoFactorSecret String? // کلید مخفی برای 2FA
  twoFactorEnabled Boolean @default(false) // وضعیت فعال بودن 2FA
  backupCodes   String?   // JSON array of backup codes for 2FA
  preferences   String?   // JSON object of user preferences
  assignedTherapistId String? // ID of assigned therapist
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  OTPs          OTP[]     @relation("UserOTPs")
  testResults   TestResult[]
  comments      Comment[]
  notifications Notification[]
  chatHistory   ChatHistory[]
  userTests     UserTest[] // رابطه با تست‌های انجام شده توسط کاربر
  blogs         Blog[] // رابطه با مقالات نوشته شده توسط کاربر
  userExercises UserExercise[] // رابطه با تمرینات کاربر
  marketplaceItems MarketplaceItem[] // رابطه با آیتم‌های مارکت‌پلیس
  // screeningResults ScreeningResult[] // رابطه با نتایج غربالگری - حذف شد
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model OTP {
  id         String   @id @default(cuid())
  identifier String
  code       String
  mode       String
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  userId     String?
  user       User?    @relation("UserOTPs", fields: [userId], references: [id])
}

model UiSetting {
  id        String   @id @default(cuid())
  theme     String   @default("light")
  font      String   @default("vazir")
  direction String   @default("rtl")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TestResult {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  testName    String
  testId      String?
  testSlug      String?  // slug of the test
  score       Float
  result      String?
  resultText  String?  // full result text
  rawAnswers  String?  // raw answers as JSON
  analysis    String?
  answers     String?  // JSON string of answers
  completed   Boolean  @default(false)
  severity    String?  // severity level
  interpretation String? // interpretation text (JSON array of InterpretationChunk)
  subscales   String?  // JSON array of subscale scores (for global recommendations)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([testSlug])
  @@index([completed])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String?  // notification type
  priority  String?  // priority level
  actionUrl String?  // URL for action
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([type])
  @@index([read])
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatHistory {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  messages    String   // JSON string of messages
  testResults String?  // JSON string of test results
  screeningAnalysis String? // JSON string of screening analysis
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

model Chat {
  id        String   @id @default(cuid())
  userEmail String
  messages  String   // JSON string of messages
  createdAt DateTime @default(now())
  
  @@index([userEmail, createdAt])
}

model Exercise {
  id          String   @id @default(cuid())
  title       String
  description String
  type        String   // خشم، استرس، افسردگی، اضطراب
  category    String   // روزانه، هفتگی، ماهانه
  duration    Int      // مدت زمان به دقیقه
  instructions String  // دستورالعمل‌های تمرین
  difficulty  String   // آسان، متوسط، سخت
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userExercises UserExercise[] // رابطه با تمرینات کاربران
}

model UserExercise {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  exerciseId  String
  exercise    Exercise @relation(fields: [exerciseId], references: [id])
  completedAt DateTime?
  isCompleted Boolean  @default(false)
  rating      Int?     // امتیاز 1-5
  feedback    String?  // بازخورد کاربر
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, exerciseId])
}

model Test {
  id          String     @id @default(cuid())
  testSlug    String     @unique
  slug        String?    // alias for testSlug (for backward compatibility)
  testName    String
  title       String?    // alias for testName (for backward compatibility)
  description String?
  category    String?
  published   Boolean    @default(false) // alias for isActive (for backward compatibility)
  isActive    Boolean    @default(true)
  deletedAt   DateTime?  // برای soft delete
  scoringConfig String?  // JSON: scoring keys, reverse items, subscales, cutoffs
  createdAt   DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  questions   Question[] // رابطه با سوالات تست
  userTests   UserTest[] // رابطه با تست‌های انجام شده توسط کاربران
}

model Question {
  id        String   @id @default(cuid())
  testId    String
  test      Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  text      String
  order     Int      // برای ترتیب سوالات
  dimension String?  // برای تست‌های چندبعدی مثل MBTI: "E/I", "S/N", "T/F", "J/P"
  isReverse Boolean  @default(false) // آیا این سوال reverse-scored است؟
  options   Option[] // رابطه با گزینه‌های سوال
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Option {
  id         String   @id @default(cuid())
  questionId String
  question  Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text       String
  isCorrect  Boolean  @default(false) // برای تست‌های با پاسخ صحیح
  score      Int      @default(0)     // برای تست‌های امتیازی
  order      Int      // برای ترتیب گزینه‌ها
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model UserTest {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  testId      String
  test        Test      @relation(fields: [testId], references: [id], onDelete: Cascade)
  score       Float?
  completedAt DateTime  @default(now())
  answers     Json?     // ذخیره پاسخ‌های کاربر به صورت JSON
}

model LearningMetric {
  id          String   @id @default(cuid())
  accuracy    Float
  loss        Float
  modelName   String
  updatedAt   DateTime @default(now())
}

model MoodAggregate {
  id          String   @id @default(cuid())
  moodType    String
  intensity   Float
  userCount   Int
  recordedAt  DateTime @default(now())
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?  // خلاصه مقاله
  category    String   // دسته‌بندی روان‌شناسی
  tags        String   // برچسب‌ها (comma-separated)
  author      String   @default("Testology Editorial Team")
  coverUrl    String?  // تصویر کاور
  published   Boolean  @default(false) // وضعیت انتشار
  featured    Boolean  @default(false) // مقاله ویژه
  viewCount   Int      @default(0) // تعداد بازدید
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([category, published, createdAt])
  @@index([featured, published])
}

model NewsletterSubscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
  isActive     Boolean  @default(true)
  unsubscribedAt DateTime?
  
  @@index([email, isActive])
}

model Blog {
  id              String        @id @default(cuid())
  title           String
  slug            String        @unique
  metaDescription String?
  description     String?       // full description
  excerpt         String?       // short excerpt
  content         String
  category        String        @default("general")
  imageUrl        String?
  tags            String?
  published       Boolean       @default(false)
  publishedAt     DateTime?     // publication date
  featured        Boolean       @default(false)
  viewCount       Int           @default(0)
  views           Int           @default(0) // alias for viewCount
  authorId        String
  author          User          @relation(fields: [authorId], references: [id])
  comments        BlogComment[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([slug])
  @@index([category])
  @@index([published])
  @@index([publishedAt])
  @@index([featured])
}

// جداول آمار و تحلیل
model MonthlyAnalytics {
  id       String @id @default(cuid())
  month    String @unique
  users    Int
  tests    Int
  articles Int
  revenue  Int
}

model CategoryAnalytics {
  id         String @id @default(cuid())
  category   String @unique
  views      Int
  tests      Int
  articles   Int
  engagement Int
}

model DailyAnalytics {
  id       String @id @default(cuid())
  date      String @unique
  users     Int
  tests     Int
  articles  Int
  revenue   Int
}

model UserAnalytics {
  id        String @id @default(cuid())
  total     Int
  active    Int
  new       Int
  returning Int
  premium   Int
  free      Int
}

model TestAnalytics {
  id             String @id @default(cuid())
  total          Int
  completed      Int
  averageTime    Float
  completionRate Float
  satisfaction   Float
}

model ArticleAnalytics {
  id        String @id @default(cuid())
  total     Int
  published Int
  draft     Int
  views     Int
  likes     Int
  shares    Int
  comments  Int
}

model GeoAnalytics {
  id         String @id @default(cuid())
  country    String @unique
  users      Int
  percentage Float
}

model DeviceAnalytics {
  id         String @id @default(cuid())
  device     String @unique
  users      Int
  percentage Float
}

model BrowserAnalytics {
  id         String @id @default(cuid())
  browser    String @unique
  users      Int
  percentage Float
}

model HourlyAnalytics {
  id    String @id @default(cuid())
  hour  Int    @unique
  users Int
  tests Int
}

model WeeklyAnalytics {
  id    String @id @default(cuid())
  day   String @unique
  users Int
  tests Int
}

// مدل‌های جدید برای سیستم غربالگری
model ScreeningSet {
  id          String   @id @default(cuid())
  name        String
  description String?
  questions   String   // JSON string of questions
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  results     ScreeningResult[]
}

model ScreeningResult {
  id              String      @id @default(cuid())
  userEmail       String
  screeningSetId  String
  screeningSet    ScreeningSet @relation(fields: [screeningSetId], references: [id])
  answers         String      // JSON string of answers
  analysis        String      // GPT analysis
  recommendedTests String     // JSON string of recommended tests
  emotionalState  String?     // JSON string of emotional analysis
  relationshipPatterns String? // JSON string of relationship analysis
  motivationLevel String?     // motivation level analysis
  focusAbility    String?     // focus ability analysis
  selfEsteem      String?     // self-esteem analysis
  keyInsights     String?     // JSON string of key insights
  nextSteps       String?     // JSON string of next steps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([userEmail, createdAt])
}

model SystemConfig {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model BlogCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  color       String?
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HumanFeedback {
  id            String   @id @default(cuid())
  userId        String?
  clinicianId   String?
  reportId      String?
  feedbackType  String   // "approved" | "revised" | etc.
  feedbackNote  String?
  aiConfidence  Float?
  timeTaken     Int?     // seconds
  feedbackScore Float?   // 0-1
  reliability   Float?   // 0-1
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([clinicianId])
  @@index([reportId])
  @@index([createdAt])
}

model PerformanceMetric {
  id            String   @id @default(cuid())
  layer         String   @unique
  avgLatencyMs  Float
  successRate   Float
  divergence    Float
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}

model SystemLog {
  id        String   @id @default(cuid())
  layer     String
  action    String?  // action name
  latencyMs Int?
  status    String   // "success" | "error" | etc.
  meta      String?  // JSON metadata
  createdAt DateTime @default(now())
  
  @@index([layer])
  @@index([action])
  @@index([createdAt])
}

model ModelWeight {
  id        String   @id @default(cuid())
  modelName String   @unique
  weight    Float
  accuracy  Float?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model RiskFlag {
  id            String   @id @default(cuid())
  clinicianId   String?
  reportId      String?
  level         String   // "critical" | "high" | "medium" | "low"
  category      String?
  aiSummary     String?
  humanReviewed Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([clinicianId])
  @@index([reportId])
  @@index([humanReviewed])
  @@index([createdAt])
}

model TherapyMemory {
  id          String   @id @default(cuid())
  userId      String   @unique
  summary     String
  keyInsights String
  emotionTags String   // JSON string array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model MarketplaceItem {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  price       Float    @default(0)
  imageUrl    String?
  type        String   @default("exercise") // "exercise" | "test" | "article" | etc.
  category    String   @default("general")
  difficulty  String?  // "beginner" | "intermediate" | "advanced"
  duration    Int?     // minutes
  fileUrl     String?
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([authorId])
  @@index([category])
  @@index([type])
  @@index([createdAt])
}

model SeoMeta {
  id            String   @id @default(cuid())
  key           String   // ترکیب type_id مثل "article_123"
  lang          String   // زبان مثل "fa", "en", "ar"
  title         String
  description   String
  keywords      String?
  ogTitle       String?
  ogDescription String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([key, lang], name: "key_lang")
  @@index([key])
  @@index([lang])
}

model Translation {
  id        String   @id @default(cuid())
  key       String   // ترکیب type_id مثل "article_123"
  lang      String   // زبان مثل "fa", "ar", "fr", "ru", "tr", "es"
  text      String   // متن ترجمه شده
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([key, lang], name: "key_lang")
  @@index([key])
  @@index([lang])
}

model BehaviorPattern {
  id           String   @id @default(cuid())
  keyword      String
  frequency    Int
  sentiment    Float    // -1 to 1
  meaning      String
  relatedTests String?  // JSON string array
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([keyword])
  @@index([createdAt])
}

model MoodTrend {
  id        String   @id @default(cuid())
  userId    String
  category  String   // "mood" | "anxiety" | "focus" | "selfEsteem" | "motivation"
  score     Float    // 0-100
  source    String?  // "test" | "clinicalReport" | etc.
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([category])
  @@index([createdAt])
}

model Dream {
  id            String   @id @default(cuid())
  title         String
  content       String
  interpretation String?
  inspiration   String?
  sourceData    String?  // JSON string
  moodContext   String?
  date          DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([date])
  @@index([moodContext])
  @@index([createdAt])
}

model DreamPattern {
  id           String   @id @default(cuid())
  symbol       String
  frequency    Int
  meaning      String
  sentiment    Float?   // -1 to 1
  relatedTests String?  // JSON string array
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([symbol])
  @@index([frequency])
  @@index([createdAt])
}

model EmotionLog {
  id          String   @id @default(cuid())
  userId      String
  message     String
  emotion     String   // "joy" | "sadness" | "anger" | "anxiety" | "calm" | "hope"
  intensity   Float    // 0.0 to 1.0
  typingScore Float?   // 0.0 to 1.0
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([emotion])
  @@index([createdAt])
}

model ClinicalReport {
  id            String   @id @default(cuid())
  userId        String
  summary       String
  mood          String?
  anxiety       String?
  motivation    String?
  relationships String?
  selfEsteem    String?
  focus         String?
  recommendation String?
  versionCode   String?  // version code for verification
  digitalSignature String? // digital signature for verification
  verificationUrl String? // URL for verification
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([createdAt])
}

model ConsensusReview {
  id            String   @id @default(cuid())
  reportId      String
  modelsUsed    String   // JSON string array
  consensusText String
  confidence    Float    // 0.0 to 1.0
  divergence    Float
  riskLevel     String   // "low" | "medium" | "high"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([reportId])
  @@index([createdAt])
}

model MoodEntry {
  id        String    @id @default(cuid())
  userId    String
  mood      String    // mood value
  note      String?
  date      DateTime
  sentiment Float?    // -1 to 1
  content   String?   // optional content/message
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@index([userId])
  @@index([date])
  @@index([createdAt])
}

model MoodLog {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime @default(now())
  mood        String   // mood value
  sleepHour   Int?
  energy      Int?     // 0-100
  stress      Int?     // 0-100
  note        String?
  activities  String?  // JSON array
  weather     String?
  social      String?
  exercise    Boolean  @default(false)
  meditation  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model ChatMessage {
  id        String   @id @default(cuid())
  role      String   // "user" | "assistant" | "system"
  content   String
  userId    String?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model UserProgress {
  id           String   @id @default(cuid())
  userId       String   @unique
  xp           Int      @default(0)
  level        Int      @default(1)
  totalTests   Int      @default(0)
  streakDays   Int      @default(0)
  achievements String?  // JSON array of achievements
  lastActivity DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
}

model SessionPlan {
  id            String   @id @default(cuid())
  userId        String
  topic         String
  focusArea     String
  suggestedTest String?
  dailyPractice String
  aiConfidence  Float    // 0.0 to 1.0
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([createdAt])
}

model VoiceProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  tone      String   @default("warm") // "calm" | "warm" | "supportive" | "hopeful"
  rate      Float    @default(1.0)    // 0.5 to 2.0
  pitch     Float    @default(1.0)    // 0.5 to 2.0
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model UserTestRecommendation {
  id        String   @id @default(cuid())
  userId    String
  testName  String
  score     Float    // priority/relevance score
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([testName])
  @@index([score])
  @@index([createdAt])
}

model TestRecommendationWeight {
  id        String   @id @default(cuid())
  testName  String
  weight    Float    // 0.0 to 1.0
  source    String?  // "BehaviorPattern" | etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([testName])
  @@index([weight])
  @@index([createdAt])
}

model ClinicalReview {
  id            String   @id @default(cuid())
  reportId      String
  reviewerAI    String   // "GPT-4o-mini" | etc.
  reviewSummary String
  reviewScore   Float    // 0.0 to 1.0
  riskLevel     String   // "low" | "medium" | "high"
  revisionNotes String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([reportId])
  @@index([createdAt])
}

model TherapySession {
  id        String   @id @default(cuid())
  userId    String
  messages  String   // JSON string array of messages
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([createdAt])
}

// مدل‌های جدید برای سیستم پیشنهادات و درمانگر
model SuggestedContent {
  id          String   @id @default(cuid())
  userId      String
  contentId   String
  reason      String?
  priority    Int      @default(3) // 1-5
  expiresAt   DateTime?
  isViewed    Boolean  @default(false)
  isAccepted  Boolean  @default(false)
  feedback    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([contentId])
  @@index([createdAt])
}

model Therapist {
  id          String   @id @default(cuid())
  userId      String   @unique
  specialty   String?
  license     String?
  bio         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model TherapistAssignment {
  id          String   @id @default(cuid())
  therapistId String
  userId      String
  contentId   String
  status      String   @default("assigned") // "assigned" | "in_progress" | "completed" | "skipped"
  priority    Int      @default(3) // 1-5
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([therapistId])
  @@index([userId])
  @@index([contentId])
  @@index([status])
}

model TherapistPatient {
  id          String   @id @default(cuid())
  therapistId String
  patientId   String
  notes       String?
  status      String   @default("active") // "active" | "inactive"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([therapistId, patientId])
  @@index([therapistId])
  @@index([patientId])
}

model VideoLog {
  id           String   @id @default(cuid())
  userId       String
  videoUrl     String
  thumbnailUrl String?
  caption      String?
  duration     Int?     // seconds
  fileSize     Int?     // bytes
  week         Int
  year         Int
  mood         String?
  tags         String?  // JSON array
  isPrivate    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
  @@index([week, year])
  @@index([createdAt])
}

model WeeklyAssignment {
  id          String   @id @default(cuid())
  userId      String
  contentId   String
  title       String
  description String?
  note        String?
  week        Int
  year        Int
  status      String   @default("assigned") // "assigned" | "in_progress" | "completed" | "skipped"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, week, year, contentId])
  @@index([userId])
  @@index([week, year])
  @@index([status])
}

model TestRequest {
  id            String   @id @default(cuid())
  userId        String
  testName      String
  reason        String?
  suggestedById String
  status        String   @default("pending") // "pending" | "accepted" | "rejected"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([suggestedById])
  @@index([status])
}

model BlogComment {
  id          String   @id @default(cuid())
  blogId      String
  blog        Blog     @relation(fields: [blogId], references: [id])
  userId      String?
  authorName  String?
  authorEmail String?
  content     String
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([blogId])
  @@index([userId])
  @@index([approved])
}

